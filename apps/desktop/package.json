{
    "name": "@mtga-overlay/desktop",
    "version": "0.1.0",
    "main": "dist/electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build && tsc",
        "build:ui": "vite build",
        "build:desktop": "pnpm build",
        "dist": "pnpm build:desktop && electron-builder --win",
        "lint": "eslint src --ext .ts,.tsx",
        "typecheck": "tsc --noEmit"
    },
    "build": {
        "appId": "com.mtga.overlay",
        "productName": "MTGAOverlay",
        "asar": true,
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**",
            "electron/**",
            "package.json"
        ],
        "win": {
            "target": [
                "portable"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "dependencies": {
        "@mtga-overlay/core": "workspace:*",
        "@mtga-overlay/shared": "workspace:*",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "electron": "^28.2.1",
        "vite": "^5.0.12",
        "@vitejs/plugin-react": "^4.2.1",
        "electron-builder": "^24.9.1",
        "typescript": "^5.3.3",
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18"
    }
}