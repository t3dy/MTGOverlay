{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "jsx": "react-jsx",
        "module": "CommonJS",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "noEmit": false
    },
    "include": [
        "src/**/*",
        "electron/**/*"
    ],
    "references": [
        {
            "path": "../../packages/core"
        },
        {
            "path": "../../packages/shared"
        }
    ]
}